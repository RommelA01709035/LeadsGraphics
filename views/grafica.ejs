<%- {
    data: data,
    opcion: opcion,
    caso: caso
} %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gr√°fica</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="../public/css/styles-grafica.css">
    <style>
        
#grafica-container {
    max-width: 400px; 
    max-height: 300px;
    padding: 60px;
}

#myChart {
    max-width: 400px; 
    max-height: 300px; 
    margin: auto;
}
    </style>
</head>
<body>
    <div id="grafica-container">
        <canvas id="myChart"></canvas>
    </div>

    <a href="/crea-grafica">
        Crear Grafica
    </a>
    
    <script>
            
    const data = JSON.parse('<%- JSON.stringify(data) %>');
    const opcion = JSON.parse('<%- JSON.stringify(opcion) %>');
    const labels = data.map(entry => `${entry.mes}-${entry.estado_lead}`);
    const values = data.map(entry => entry.cantidad_leads);

    const chartData = {
        labels: labels,
        datasets: [{
            label: 'Cantidad de leads',
            data: values,
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)'
            ],
            borderWidth: 1
        }]
    };
            
            const config = {
                type: opcion,
                data: chartData,
                options: {
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                font: {
                                    size: 10 
                                }
                            }
                        },
                        x: {
                            ticks: {
                                font: {
                                    size: 10 
                                }
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            labels: {
                                font: {
                                    size: 10 
                                }
                            }
                        }
                    }
                },
            };

            var myChart = new Chart(
                document.getElementById('myChart'),
                config
            );
            
    </script>
</body>
</html>